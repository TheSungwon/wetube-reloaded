extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method = "POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accept="video/*", id="video", name="video", required)
        input(placeholder="TITLE", type="text", required, name="title", maxlength=80)
        input(placeholder="DESCRIPTION", type="text", required, name="description", minlength=10)
        input(placeholder="HASH TAGS, separated by comma", type="text", required, name="hashtags")
        
        input(type="submit", value="upload Video")