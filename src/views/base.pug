doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | WeTube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        link(rel="icon" href="#")

    body
        header
            
            small Hello, #{loggedIn ? "loggedIn" : "Please Sign In or Sign Up"}

            nav    
                ul 
                    li 
                        a(href="/") Home

                    li
                        a(href= loggedIn ? "/users/logout" : "/login")= loggedIn ? "Log Out" : "Login"

                    if loggedIn
                        li 
                            a(href="/my-profile") #{loggedInUser.name} 의 Profile
                        
            
                    li
                        a(href="/videos/upload") Upload Video
                    li
                        a(href="/search") Search✔
                    li
                        a(href="/join") Join


            h1=pageTitle
        main
            block content
        include partials/footer.pug