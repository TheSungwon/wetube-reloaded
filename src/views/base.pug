doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | WeTube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")

    body
        header
            
            small Hello, #{fakeUser ? fakeUser.username : "Please Sign In or Sign Up"}

            nav    
                ul 
                    li 
                        a(href="/") Home

                    li
                        a(href= fakeUser ? "/logout" : "/login")= fakeUser ? "Log Out" : "Login"
            
                    li
                        a(href="/videos/upload") Upload Video


            h1=pageTitle
        main
            block content
        include partials/footer.pug