extends base.pug

block content 
    video(src="/" + video.fileUrl, controls, width="300", height="300")
    
    div
        h1 title : #{video.title}
        p=video.description
        small=video.createdAt
        p #{video.meta.views === 1 ? "view" : "views"} :  #{video.meta.views}
    div
        ul
            each tag in video.hashtags
                li=tag
    div
        small Uploaded By #{owner.name}
        

