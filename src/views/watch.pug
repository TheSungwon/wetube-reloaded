extends base.pug

block content 
    video(src="/" + video.fileUrl, controls, width="300", height="300")
    button#play Play
    button#mute Mute
    input(type="range", step="0.01", value="0.5", min="0", max="1")#volume
    div
        span#currentTime 00:00/00:00 
        span / 
        span#totalTime 00:00/00:00
    
